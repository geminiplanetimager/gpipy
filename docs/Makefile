# Makefile for Sphinx documentation
#
# Auto-generated by sphinx-quickstart
#

# You can set these variables from the command line.
SPHINXOPTS    =
SPHINXBUILD   = sphinx-build
PAPER         =

# Internal variables.
PAPEROPT_a4     = -D latex_paper_size=a4
PAPEROPT_letter = -D latex_paper_size=letter
ALLSPHINXOPTS   = -d build/doctrees $(PAPEROPT_$(PAPER)) $(SPHINXOPTS) . 

.PHONY: help clean html dirhtml pickle json htmlhelp qthelp latex changes linkcheck doctest

help:
	@echo "Please use \`make <target>' where <target> is one of"
	@echo "  html      to make standalone HTML files"
	@echo "  dirhtml   to make HTML files named index.html in directories"
	@echo "  pickle    to make pickle files"
	@echo "  json      to make JSON files"
	@echo "  htmlhelp  to make HTML files and a HTML help project"
	@echo "  qthelp    to make HTML files and a qthelp project"
	@echo "  latex     to make LaTeX files, you can set PAPER=a4 or PAPER=letter"
	@echo "  changes   to make an overview of all changed/added/deprecated items"
	@echo "  linkcheck to check all external links for integrity"
	@echo "  doctest   to run all doctests embedded in the documentation (if enabled)"

html:
	touch ./index.rst	# ensure last update date is now
	$(SPHINXBUILD) -b html $(ALLSPHINXOPTS) ./doc_output/html
	@echo
	@echo "Build finished. The HTML pages are in ./doc_output/html."
	@echo " try this to examine it: "
	@echo "        open  ./doc_output/html/index.html"


htmlstsci:
	touch ./index.html	# ensure last update date is now
	$(SPHINXBUILD) -b html $(ALLSPHINXOPTS) ./doc_output/html
	rsync -av ./doc_output/html/ nemesis.stsci.edu:web/software/gpidata/
	@echo "Software built and copied to STScI"
	@echo "try :"
	@echo "   open http://www.stsci.edu/~mperrin/software/gpidata/"



dirhtml:
	$(SPHINXBUILD) -b dirhtml $(ALLSPHINXOPTS) ./doc_output/dirhtml
	@echo
	@echo "Build finished. The HTML pages are in Documentation/dirhtml."

pickle:
	$(SPHINXBUILD) -b pickle $(ALLSPHINXOPTS) ./doc_output/pickle
	@echo
	@echo "Build finished; now you can process the pickle files."

json:
	$(SPHINXBUILD) -b json $(ALLSPHINXOPTS) ./doc_output/json
	@echo
	@echo "Build finished; now you can process the JSON files."

htmlhelp:
	$(SPHINXBUILD) -b htmlhelp $(ALLSPHINXOPTS) ./doc_output/htmlhelp
	@echo
	@echo "Build finished; now you can run HTML Help Workshop with the" \
	      ".hhp project file in ./doc_output/htmlhelp."

qthelp:
	$(SPHINXBUILD) -b qthelp $(ALLSPHINXOPTS) ./doc_output/qthelp
	@echo
	@echo "Build finished; now you can run "qcollectiongenerator" with the" \
	      ".qhcp project file in ./doc_output/qthelp, like this:"
	@echo "# qcollectiongenerator ./doc_output/qthelp/JWST-PSFs.qhcp"
	@echo "To view the help file:"
	@echo "# assistant -collectionFile ./doc_output/qthelp/JWST-PSFs.qhc"

latex:
	$(SPHINXBUILD) -b latex $(ALLSPHINXOPTS) ./doc_output/latex
	@echo
	@echo "Build finished; the LaTeX files are in ./doc_output/latex."
	@echo "Run \`make all-pdf' or \`make all-ps' in that directory to" \
	      "run these through (pdf)latex."

changes:
	$(SPHINXBUILD) -b changes $(ALLSPHINXOPTS) ./doc_output/changes
	@echo
	@echo "The overview file is in ./doc_output/changes."

linkcheck:
	$(SPHINXBUILD) -b linkcheck $(ALLSPHINXOPTS) ./doc_output/linkcheck
	@echo
	@echo "Link check complete; look for any errors in the above output " \
	      "or in ./doc_output/linkcheck/output.txt."

doctest:
	$(SPHINXBUILD) -b doctest $(ALLSPHINXOPTS) ./doc_output/doctest
	@echo "Testing of doctests in the sources finished, look at the " \
	      "results in ./doc_output/doctest/output.txt."
